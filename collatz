import sys
def collatz(number):
    if number%2==0:
        print(number//2)
        return number//2
    else:
        print((3*number)+1)
        return (3*number)+1
print('Enter number:')
try:
    r=int(input())
except ValueError:
    print('Error. Invalid Argument.')
    sys.exit()
while r!=1:
    r=collatz(r)
